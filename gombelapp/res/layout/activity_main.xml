<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
		
        <ImageButton
            android:id="@+id/imageButtonEventMain"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="10"
            android:scaleType="fitCenter"
            android:src="@drawable/event" />

        <ImageButton
            android:id="@+id/imageButtonLokasiMain"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="10"
            android:scaleType="fitCenter"
            android:src="@drawable/lokasi" />

        <ImageButton
            android:id="@+id/imageButtonInfoMain"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="10"
            android:scaleType="fitCenter"
            android:src="@drawable/info" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="195dp"
        android:scaleType="fitXY"
        android:src="@drawable/img2" />

    <SearchView
        android:id="@+id/searchView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </SearchView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imageButtonUserMain"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="10"
            android:scaleType="fitCenter"
            android:src="@drawable/user" />

        <ImageButton
            android:id="@+id/imageButtonChatMain"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="10"
            android:scaleType="fitCenter"
            android:src="@drawable/chat" />

        <ImageButton
            android:id="@+id/imageButtonSaranMain"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="10"
            android:scaleType="fitCenter"
            android:src="@drawable/saran" />

    </LinearLayout>

</LinearLayout>